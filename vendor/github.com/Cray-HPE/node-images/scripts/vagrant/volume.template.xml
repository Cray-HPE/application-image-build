<volume type='file'>
  <name>$name</name>
  <allocation>$allocation</allocation>
  <capacity>$capacity</capacity>
  <target>
    <path>/var/lib/libvirt/images/$NAME</path>
    <format type='qcow2'/>
    <permissions>
      <mode>0744</mode>
      <owner>$libvirt_uid</owner>
      <group>$libvirt_gid</group>
    </permissions>
  </target>
</volume>
